{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": [
        "dom",
        "es2017",
        "es2018",
        "es2019",
        "es2020"
      ], 
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "skipLibCheck": true
    },
    "include": [
      "src/"
    ],
    "exclude": [
      "**/*.spec.ts"
    ]
  }
  